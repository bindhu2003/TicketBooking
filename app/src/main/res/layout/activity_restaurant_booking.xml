<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Heading for Restaurant Booking -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Restaurant"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center" />

    <!-- List of Restaurants (You can use RecyclerView or ListView) -->
    <!-- Example of simple Button to simulate a restaurant -->
    <Button
        android:id="@+id/btnBookRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Restaurant"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

</LinearLayout>
