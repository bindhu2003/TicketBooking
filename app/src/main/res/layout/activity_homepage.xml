<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title or Header -->
        <TextView
            android:id="@+id/homepageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Online Ticket Booking"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Temples Section -->
        <ImageView
            android:id="@+id/imgTemples"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/temple_image"
            android:contentDescription="Image of Temples"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTemples"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temples"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Theatres Section -->
        <ImageView
            android:id="@+id/imgTheatres"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/theatre_image"
            android:contentDescription="Image of Theatres"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTheatres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theatres"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Tourist Places Section -->
        <ImageView
            android:id="@+id/imgTourist"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/tourist_image"
            android:contentDescription="Image of Tourist Places"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTourist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tourist Places"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Restaurants Section -->
        <ImageView
            android:id="@+id/imgRestaurants"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/restaurant_image"
            android:contentDescription="Image of Restaurants"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnRestaurants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurants"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
