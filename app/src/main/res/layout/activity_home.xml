<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Button for Temples -->
    <Button
        android:id="@+id/btnTemples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temples"
        android:layout_marginTop="20dp" />

    <!-- Button for Theatres -->
    <Button
        android:id="@+id/btnTheatres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theatres"
        android:layout_marginTop="20dp" />

    <!-- Button for Tourist Places -->
    <Button
        android:id="@+id/btnTouristPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tourist Places"
        android:layout_marginTop="20dp" />

    <!-- Button for Restaurants -->
    <Button
        android:id="@+id/btnRestaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurants"
        android:layout_marginTop="20dp" />

</LinearLayout>
